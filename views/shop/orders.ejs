    <body>
        <%- include("../includes/navbar.ejs") %>
            <main>
                <% if (orders.length <=0) { %>
                    <h4>No Orders</h4>
                    <% } else { %>
                        <ul>
                            <% orders.forEach(order=> { %>
                                <li>
                                    <h4># <%= order._id %>
                                    </h4>
                                    <ul>
                                        <% order.items.forEach(product=> { %>
                                            <li>
                                                <%= product.title %> (<%= product.quantity %>)
                                            </li>
                                            <% }); %>
                                    </ul>
                                </li>
                                <% }); %>
                        </ul>
                        <% } %>
            </main>
            <%- include("../includes/footer.ejs") %>